<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="welcomeVbox" alignment="CENTER" prefHeight="434.0" prefWidth="840.0" spacing="20.0" style="-fx-background-color: #3aafa9;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gruppe24.OSLOMET.Controllers.WelcomeScreen_Controller">
    <children>
        <Label text="Build a new car" textFill="#def2f1">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <Button fx:id="btnStartBuilding" onAction="#btnStartBuilding" prefHeight="25.0" prefWidth="157.0" style="-fx-background-color: #17252a;" text="Start building!" textAlignment="CENTER" textFill="#def2f1" />
        <HBox prefHeight="39.0" prefWidth="676.0" />
        <Label text="Or load your existing cars" textAlignment="CENTER" textFill="#def2f1">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>
      <ComboBox fx:id="comboAllCars" prefHeight="25.0" prefWidth="157.0" />
      <Button fx:id="btnLoadCar" onAction="#btnLoadCar" prefHeight="25.0" prefWidth="157.0" style="-fx-background-color: #17252a;" text="Change this car" textFill="#def2f1" />
      <Label fx:id="lblFeedbackChangeCar" />
        <Button fx:id="btnToTableView" onAction="#btnToTableView" prefHeight="25.0" prefWidth="157.0" style="-fx-background-color: #17252a;" text="Load all your cars" textFill="#def2f1" />
        <Button mnemonicParsing="false" onAction="#logoutBtn" prefHeight="25.0" prefWidth="157.0" style="-fx-background-color: #def2f1;" text="Logout" textFill="#17252a" />
      <Label fx:id="lblErrorWelcomeScreen" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
